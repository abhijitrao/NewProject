<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/cHint" />
            <stroke
                android:width="1dp"
                android:color="@color/cHint" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="50dp"
                android:top="0dp"
                android:right="50dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/cHint"
                android:endColor="@color/cHint"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/cHint" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="50dp"
                android:top="0dp"
                android:right="50dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>