<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_rounded"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_popup_title"
            style="@style/tvTextLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/vertical_margin_half"
            android:gravity="center"
            android:text="Thanks!!"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:background="@color/cDivider"
            android:layout_height="1dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_popup_description"
                    style="@style/tvTextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/vertical_margin"
                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center"
                    android:text="Description" />

            </LinearLayout>

        </ScrollView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/btn_popup"
                style="@style/Button"
                android:text="Done"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/cGreen"
                android:background="@color/cTransparent"
                android:textAllCaps="false" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>